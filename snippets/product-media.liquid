{% case media.media_type %}
  {% when 'image' %}
    <img
      class="w-full h-52 object-contain bg-zinc-200"
      src="{{ media | img_url: 'large' }}"
      alt="{{ media.preview_image.alt | escape }}"
    >

  {% when 'external_video' %}
    {{ media | external_video_tag: class: 'w-full h-52' }}
  
  {% when 'video' %}
    {{ media | video_tag: controls: true, class: 'w-full h-52' }}
  
  {% when 'model' %}
    {{ media | model_viewer_tag: class: 'w-full h-52' }}
  
  {% else %}
    {{ media | media_tag }}
    
{% endcase %}