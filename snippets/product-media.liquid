{% case media.media_type %}
  {% when 'image' %}
    <img
      class="w-full h-full object-cover bg-zinc-200 {{ class }}"
      src="{{ media | img_url: 'large' }}"
      alt="{{ media.preview_image.alt | escape }}"
    >

  {% when 'external_video' %}
    {{ media | external_video_tag: class: 'w-full h-full' }}
  
  {% when 'video' %}
    {{ media | video_tag: controls: true, class: 'w-full h-full ' }}
  
  {% when 'model' %}
    {{ media | model_viewer_tag: class: 'w-full h-full' }}
  
  {% else %}
    {{ media | media_tag }}
    
{% endcase %}