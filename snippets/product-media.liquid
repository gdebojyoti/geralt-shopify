{% case media.media_type %}
  {% when 'image' %}
    <img
      src="{{ media | img_url: 'large' }}"
      alt="{{ media.preview_image.alt | escape }}"
      class="product--media"
    >

  {% when 'external_video' %}
    {{ media | external_video_tag: class: 'product--media' }}
  
  {% when 'video' %}
    {{ media | video_tag: controls: true, class: 'product--media' }}
  
  {% when 'model' %}
    {{ media | model_viewer_tag: class: 'product--media' }}
  
  {% else %}
    {{ media | media_tag }}
    
{% endcase %}