{{ 'hero-v1.css' | asset_url | stylesheet_tag }}

<section class="hero-v1">
  <div class="hero-v1__splash"></div>
  
  <h1 class="hero-v1__heading">{{ section.settings.heading }}</h1>
  <h2 class="hero-v1__subheading">{{ section.settings.subheading }}</h2>
  
  <p class="hero-v1__summary">{{ section.settings.summary }}</p>

  <div class="hero-v1__cta-wrapper">
    {% assign selectedProduct = section.settings.product %}
    {% render 'cta', text: section.settings.cta, link: selectedProduct.url, class: 'hero-v1__cta' %}
    <div class="hero-v1__cta-side-text">
      {{ section.settings.socialProofText }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero section | v1",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "A Kick-ass heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "A short subheading"
    },
    {
      "type": "text",
      "id": "summary",
      "label": "Summary",
      "default": "Edit this summary text and witness the real-time updates in action as your content changes instantly"
    },
    {
      "type": "text",
      "id": "cta",
      "label": "Button text",
      "default": "View more"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Select a product for CTA"
    },
    {
      "type": "text",
      "id": "socialProofText",
      "label": "Social proof text",
      "default": "173 people have already pre-ordered"
    }
  ],
  "presets": [
    {
      "name": "Hero v1" /* this name will appear in the dropdown list ("theme sections") */
    }
  ]
}
{% endschema %}